<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/rcv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/rcv_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Image"
                android:src="@drawable/hospital" />

            <TextView
                android:id="@+id/rcv_hName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/rcv_img"
                android:gravity="center"
                android:text="Hospital Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rcv_address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rcv_hName"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@id/rcv_img"
                android:gravity="center"
                android:text="Address" />

            <TextView
                android:id="@+id/rcv_vName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rcv_address"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@id/rcv_img"
                android:gravity="center"
                android:text="Vaccine Name" />

            <TextView
                android:id="@+id/rcv_fType"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rcv_address"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/rcv_vName"
                android:gravity="center"
                android:text="Fee Type" />

            <TextView
                android:id="@+id/rcv_dose1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rcv_vName"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/rcv_img"
                android:gravity="center"
                android:text="Dose 1" />

            <TextView
                android:id="@+id/rcv_dose2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rcv_vName"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/rcv_dose1"
                android:gravity="center"
                android:text="Dose 2" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>